    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Employee" asp-action="Index">Employees</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Attendance" asp-action="Mark">Mark Attendance</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Attendance" asp-action="Report">Attendance Report</a>
    </li>

    @if (isLoggedIn)
    {
        <li class="nav-item">
            <span class="nav-link text-dark">Welcome, HR!</span>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="Logout">Logout</a>
        </li>
